// Check if user is logged in and is a crew member
if (!isset($_SESSION['user_id']) || $_SESSION['role_id'] != 3) {
    header("Location: ../loginpage.php");
    exit();
}

// Check if required tables exist
$tables_exist = true;
$required_tables = ['orders', 'order_products', 'products'];

foreach ($required_tables as $table) {
    $check_query = "SHOW TABLES LIKE '$table'";
    if ($conn->query($check_query)->num_rows == 0) {
        $tables_exist = false;
        error_log("Missing required table: $table");
    }
}

// Fetch orders with status
if ($tables_exist) {
    if ($tables_exist) {
        $query = "SELECT 
                    o.id,
                    o.name as customer_name,
                    o.order_time,
                    o.status,
                    o.address,
                    o.method as payment_method,
                    o.item_name,
                    o.total_price,
                    o.total_products
                  FROM orders o
                  WHERE o.status IN ('pending', 'preparing', 'out for delivery')
                  ORDER BY o.order_time DESC";
              ORDER BY 
                CASE o.status
                    WHEN 'pending' THEN 1
                    WHEN 'preparing' THEN 2
                    WHEN 'ready' THEN 3
                END,
                o.order_time DESC";
} else {
    // Simplified query if tables don't exist yet
    $query = "SELECT * FROM orders WHERE status IN ('pending', 'preparing', 'ready') ORDER BY order_time DESC";
}

$result = $conn->query($query);
$orders = [];
while ($row = $result->fetch_assoc()) {
    $orders[] = $row;
}
