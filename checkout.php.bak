    <script>
        // Handle notification dismiss
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                const notification = document.querySelector('.notification');
                if (notification) {
                    notification.style.opacity = '0';
                    setTimeout(() => notification.remove(), 300);
                }
            }, 5000);
        });

        // Payment method selection
        document.querySelectorAll('.payment-method').forEach(method => {
            method.addEventListener('click', () => {
                document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('selected'));
                method.classList.add('selected');
            });
        });

        // Load cart data from sessionStorage
        function loadCartData() {
            const cartData = JSON.parse(sessionStorage.getItem('cart') || '[]');
            const orderItems = document.getElementById('orderItems');
            
            if (!orderItems) return;

            let html = '';
            let total = 0;

            cartData.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                html += `
                    <div class="summary-item">
                        <span>${item.name} × ${item.quantity}</span>
                        <span>₱${itemTotal.toFixed(2)}</span>
                    </div>
                `;
            });

            html += `
                <div class="summary-item summary-total">
                    <span>Total</span>
                    <span>₱${total.toFixed(2)}</span>
                </div>
            `;

            orderItems.innerHTML = html;
        }

        // Handle place order
        document.getElementById('placeOrderBtn')?.addEventListener('click', async () => {
            const selectedPayment = document.querySelector('.payment-method.selected');
            if (!selectedPayment) {
                alert('Please select a payment method');
                return;
            }

            const paymentMethod = selectedPayment.dataset.method;
            const deliveryInstructions = document.querySelector('textarea').value;
            const cartData = JSON.parse(sessionStorage.getItem('cart') || '[]');

            if (cartData.length === 0) {
                alert('Your cart is empty');
                return;
            }

            try {
                const response = await fetch('process_order.php', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        paymentMethod,
                        deliveryInstructions,
                        items: cartData
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // Clear cart and redirect to order confirmation
                    sessionStorage.removeItem('cart');
                    window.location.href = `order_confirmation.php?id=${result.orderId}`;
                } else {
                    alert(result.message || 'Failed to place order');
                }
            } catch (error) {
                alert('An error occurred while processing your order');
                console.error('Order error:', error);
            }
        });

        // Load cart data when page loads
        window.addEventListener('load', loadCartData);
    </script>
